<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:padding="@dimen/distance_10dp"
    android:background="@color/grey_hex_ef"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_main">

        <TextView
            android:id="@+id/txt_serial_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="@android:color/black"
            android:layout_marginEnd="@dimen/distance_10dp"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/distance_2dp"
            android:src="@drawable/arrow_grey" />
    </RelativeLayout>
</RelativeLayout>