<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/table_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/txt_serial_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/text_serial_module_break"
            android:textColor="#000"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/txt_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/text_name_detail_break"
            android:textColor="#000"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/txt_number_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/text_number_delivery"
            android:textColor="#000"
            android:textSize="@dimen/text_12sp" />

        <EditText
            android:id="@+id/txt_number_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/text_number_receive"
            android:textColor="#000"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:id="@+id/txt_status"
            android:text="@string/text_confirm"
            android:textColor="#000" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />
</TableLayout>