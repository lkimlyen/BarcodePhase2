<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="@dimen/distance_24dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_code_scan"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:id="@+id/txt_barcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/distance_5dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/distance_24dp"
                            android:gravity="center_vertical"
                           android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_serial_module_print"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:id="@+id/txt_serial_module"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/distance_5dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/distance_24dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_name_detail_print"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:id="@+id/txt_name_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/distance_5dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/distance_24dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_number_order"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_12sp" />

                            <TextView
                                android:id="@+id/txt_number_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/distance_5dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/distance_5dp"

            android:src="@drawable/ic_clear" />
    </RelativeLayout>

</LinearLayout>
