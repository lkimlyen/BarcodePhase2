<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/distance_8dp"
                android:layout_toRightOf="@+id/img_back"
                android:gravity="center"
                android:text="@string/text_home"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_16dp">

        <ImageView
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/distance_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃªn"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--User Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_create_package"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_createcode"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:text="@string/text_create_code_package"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_history_pack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_history_create_pack"
                    android:text="@string/text_history_create_code"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/btn_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_report_detail"
                    android:text="@string/text_report_detail_create_pack"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_warehousing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_store_arc"
                    android:text="@string/text_scan_warehouse"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_delivery"
                    android:text="@string/text_scan_delivery"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_confirm_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/check"
                    android:text="@string/text_check_code_scan"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_import_works"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_in_stock"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:text="@string/text_import_works"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_info"
                    android:text="@string/text_setting"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/bg_button_stroke_white"
                    android:drawableLeft="@drawable/ic_exit_24dp"
                    android:text="@string/text_logout"
                    android:paddingLeft="@dimen/distance_16dp"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="@dimen/distance_16dp"
                    android:textAllCaps="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="Link Web:"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_link"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="left"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_14sp"
                    android:padding="@dimen/distance_16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>