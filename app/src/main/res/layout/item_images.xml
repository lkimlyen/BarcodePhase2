<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_90dp"
    android:layout_margin="@dimen/distance_5dp"
    android:layout_height="@dimen/size_65dp">

    <ImageView
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_55dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_image_error"/>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_image"
        android:layout_alignParentRight="true"/>
</RelativeLayout>